<h1>Listing all the goals</h1>

<%= link_to 'HOME', controller: 'welcome' %>
<%= link_to 'Create a new goal', new_goal_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Info</th>
    <th>bool</th>
    <th>id</th>
  </tr>
 
  <% @goals.each do |goal| %>
    <tr>
      <td><%= goal.name %></td>
      <td><%= goal.text %></td>
      <td><%= goal.is_class %></td>
      <td><%= goal.id %></td>
      <td><%= link_to 'Show', goal_path(goal) %></td>
      <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
      <td><%= link_to 'Destroy', goal_path(goal), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

