<h1>Listing all the Rewards </h1>

<%= link_to 'HOME', controller: 'welcome' %>
<%= link_to 'Create a New reward', new_reward_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Info</th>
    <th>bool</th>
    <th>id</th>
  </tr>
 
  <% @rewards.each do |reward| %>
    <tr>
      <td><%= reward.name %></td>
      <td><%= reward.text %></td>
      <td><%= reward.is_class %></td>
      <td><%= reward.id %></td>
      <td><%= link_to 'Show', reward_path(reward) %></td>
      <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
      <td><%= link_to 'Destroy', reward_path(reward), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

