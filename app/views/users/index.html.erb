<h1>The complete listing of the people base!</h1>
<%= link_to 'HOME', controller: 'welcome' %>
 <%= link_to 'New User', new_user_path %>
<table>
  <tr>
    <th>Name: </th>
    <th>Rank: </th>
    <th>Age: </th>
    <th>Pages Read: </th>
    <th>Books Read: </th>
    <th>Reading Level:</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td>
        <% if user.is_teacher %>
        <%= "Teacher" %>
        <% else %>
        <%= "Student" %>
        <% end %>
      </td>
      <td><%= user.age %></td>
      <td><%= user.pages_read %></td>
      <td><%= user.books_read %></td>
      <td><%= user.reading_level %></td>
      <td><%= link_to 'Report Card', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),method: :delete,data: { confirm: 'Are you Sure?' } %> </td>
    </tr>
  <% end %>
</table>
