<h1>Add a new User to the people base! </h1>

<%= form_for :user, url: users_path do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :student_or_teacher %><br>
    <%= f.text_field :student_or_teacher %>
  </p>

  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>

  <p>
    <%= f.label :pages_read %><br>
    <%= f.text_field :pages_read %>
  </p>

  <p>
    <%= f.label :books_read %><br>
    <%= f.text_field :books_read %>
  </p>

  <p>
    <%= f.label :reading_level %><br>
    <%= f.text_field :reading_level %>
  </p>
 
  <p>
    <%= f.label :book_list %><br>
    <%= f.text_area :book_list %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
