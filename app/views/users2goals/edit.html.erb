<h1>Editing an entry</h1>
 
<%= form_for :users2goal, url: users2goal_path(@users2goal), method: :patch do |f| %>
  
<table>
  <tr>
    <th>Name</th>
    <th>ID</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.id %></td>
    </tr>
  <% end %>
</table>


  <h2>Please enter the user ID here:</h2>
  <p>
    <%= f.label :userid %><br>
    <%= f.text_field :userid %>
  </p>
 
  <h2>Please enter the goal ID here:</h2>
  <p>
    <%= f.label :goalid %><br>
    <%= f.text_field :goalid %>
  </p>

  <table>
  <tr>
    <th>name</th>
    <th>ID</th>
  </tr>
 
  <% @goals.each do |goal| %>
    <tr>
      <td><%= goal.name %></td>
      <td><%= goal.id %></td>
    </tr>
  <% end %>
</table>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', users2goals_path %>