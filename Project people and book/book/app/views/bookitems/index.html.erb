<h1>Listing all the books of superior Knowledge</h1>
 <%= link_to 'new Book', new_bookitem_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Pages</th>
  </tr>
 
  <% @bookitems.each do |bookitem| %>
    <tr>
      <td><%= bookitem.title %></td>
      <td><%= bookitem.author %></td>
      <td><%= bookitem.pages %></td>

      <td><%= link_to 'Show', bookitem_path(bookitem) %></td>
      <td><%= link_to 'Edit', edit_bookitem_path(bookitem) %></td>
      <td><%= link_to 'Destroy', bookitem_path(bookitem), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>